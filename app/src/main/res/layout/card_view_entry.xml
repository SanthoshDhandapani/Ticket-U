<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/movieimagetitlelayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
            android:id="@+id/movieimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/movietitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieimage"
            android:paddingBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/movieimage"
            android:layout_alignTop="@id/movieimage"
            android:layout_alignRight="@id/movieimage"
            android:layout_alignBottom="@id/movieimage"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="50dp"
            />
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@+id/movieimagetitlelayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timings"
            android:padding="10dp"
            android:textSize="50dp"
            android:layout_weight="0.2"
            android:gravity= "left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movietheatre"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_weight="0.5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/availabletickets"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_weight="0.2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieshare"
                android:padding="10dp"
                android:layout_weight="0.1"
                android:src="@android:drawable/ic_menu_share"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>